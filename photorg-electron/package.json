{
  "name": "photorg-electron",
  "version": "1.0.0",
  "description": "Photo Organizer with Electron frontend and C++ backend",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "install": "node-gyp rebuild",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder build --mac --win --linux",
    "build:mac": "electron-builder build --mac",
    "build:win": "electron-builder build --win",
    "build:linux": "electron-builder build --linux",
    "rebuild": "electron-rebuild"
  },
  "author": "Jaeyol (Peter) Lee",
  "license": "MIT",
  "devDependencies": {
    "chromedriver": "^126.0.4",
    "electron": "^31.1.0",
    "electron-builder": "^24.13.3",
    "electron-chromedriver": "^29.4.3",
    "electron-rebuild": "^3.2.9",
    "mocha": "^10.6.0",
    "node-gyp": "^8.4.1",
    "selenium-webdriver": "^4.22.0"
  },
  "dependencies": {
    "node-addon-api": "^4.0.0"
  },
  "build": {
    "appId": "com.yiwoduf.photorg",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "files": [
      "**/*",
      "build/Release/photorg.node"
    ],
    "asarUnpack": [
      "build/Release/photorg.node"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
